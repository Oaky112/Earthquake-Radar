<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_flow"
    app:startDestination="@id/mainDashboardFragment">

    <fragment
        android:id="@+id/mainDashboardFragment"
        android:name="com.example.crochetprogressproject.Views.MainDashboardFragment"
        android:label="fragment_main_dashboard"
        tools:layout="@layout/fragment_main_dashboard">

        <action
            android:id="@+id/goToInfo"
            app:destination="@+id/infoFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/infoFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainDashboardFragment_to_instructionsFragment2"
            app:destination="@id/instructionsFragment" />
    </fragment>


    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.crochetprogressproject.Views.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info">
        <action
            android:id="@+id/goToDashboard"
            app:destination="@+id/mainDashboardFragment"
            app:popUpTo="@+id/mainDashboardFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_infoFragment_to_instructionsFragment2"
            app:destination="@id/instructionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/instructionsFragment"
        android:name="com.example.crochetprogressproject.Views.InstructionsFragment"
        android:label="InstructionsFragment" >
        <action
            android:id="@+id/action_instructionsFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_instructionsFragment_to_mainDashboardFragment2"
            app:destination="@id/mainDashboardFragment" />
    </fragment>


</navigation>